{
  "extends": "airbnb",

  "rules": {
    "jsx-quotes": [ 2, "prefer-double" ],
    "object-curly-spacing": [ "error", "always" ],
    "array-bracket-spacing": [ "error", "always" ],
    "comma-dangle": [ "error", "never" ],
    "semi": [ "error", "never" ],
    "consistent-return": "off",
    "arrow-body-style": "off",
    "no-console": "off"
  },

  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jquery": true,
    "browser": true
  },

  "globals": {
    "Backbone": true
  }
}
